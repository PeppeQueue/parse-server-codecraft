<html lang="en">

<head>
    <% include ../partials/head %>
   <!-- <link rel="stylesheet" href="/public/assets/css/change-password.css">-->
    <script src="/public/assets/js/changepassword.js"> </script>
    <script type="text/javascript">
        $(document).ready(function () {          
          ChangePassword.init();
          $(".sign-in").click(function () {
            window.location.href = "/";
          });
      
        });
      </script>
</head>


<header class="styles__container" role="navigation">
    <% include ../partials/header %>
</header>


<div class="container">


    <section id="formHolder">

        <div class="row">

            <div class="col-sm-3">
            </div>

            <!-- Brand Box -->
            <div class="col-sm-6 form">



                <div class="create change-password-form-peice">
                    <form class="menu-form" action="#" method="post" id="signInForm">
                        <div class="form-group">
                            <span class="text-error" align="center" id="changePasswordMessage"></span>
                        </div>

                        <div class="center-block loader " id="loader"></div>

                        <div class="content">
                            <div class="form-group">
                                <label for="currentPassword"> Current Password</label>
                                <input type="password" name="currentPassword" id="currentPassword"
                                    class="current-password">
                                <span class="error"></span>
                            </div>
                            <div>
                                <span class="glyphicon glyphicon-wrench label-icon"> </span>
                            </div>

                            <div class="form-group">
                                <label for="newPassword"> New Password</label>
                                <input type="password" name="newPassword" id="newPassword" class="new-password">
                                <span class="error"></span>
                            </div>
                            <div>
                                <span class="glyphicon glyphicon-wrench label-icon"> </span>
                            </div>

                            <div class="form-group">
                                <label for="repeatPassword"> Retype New Password</label>
                                <input type="password" name="repeatPassword" id="repeatPassword"
                                    class="repeat-password">
                                <span class="error"></span>
                            </div>
                            <div>
                                <span class="glyphicon glyphicon-wrench label-icon"> </span>
                            </div>

                            <div class="CTA">
                                <input type="submit" id="changePasswordButton" value="Update">

                            </div>
                        </div>

                        <div class="CTA">
                            <input type="submit" id="signInButton" value="SignIn">

                        </div>


                    </form>
                </div><!-- End Login Form -->


            </div>


            <div class="col-sm-3">
            </div>


        </div>

    </section>


</div>


<footer>
    <% include ../partials/footer %>
</footer>



</html>